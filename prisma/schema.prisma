generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  // directUrl = env("DIRECT_URL")
}


model User {
  id        Int      @id @default(autoincrement())
  username  String
  email     String
  google_access_token String? @default("")
  github_access_token String? @default("")
  github_avatar_url  String? @default("")
  slack_access_token String? @default("")
  slack_channel_id String? @default("")
  bio       String?  @default("")
  commits   Commit[] 
}



model Commit {
  id              Int              @id @default(autoincrement())
  repo            String
  branch          String
  status          String?          @default("")
  commit_message  String?          @default("")
  commit_desc     String?          @default("")
  scheduled_time  DateTime         @default(now())
  isSlack         Boolean           @default(false)
  isForce         Boolean           @default(false)

  modifiedFiles   ChangeFile[]     @relation("ModifiedFiles")
  modifiledFileDiff ChangeFile[]    @relation("ModifiledFileDiff")
  deletionFiles   ChangeFile[]     @relation("DeletionFiles")
  additionFiles   ChangeFile[]     @relation("AdditionFiles")

  userId          Int  
  user            User              @relation(fields: [userId], references: [id])

  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
}

model ChangeFile {
  id          Int       @id @default(autoincrement())
  path        String?
  content     String?
  commitId    Int

  commit      Commit     @relation("ModifiedFiles", fields: [commitId], references: [id], onDelete: Cascade, map: "ChangeFile_commit_modified_fkey")

  commitDeletion Commit? @relation("DeletionFiles", fields: [commitId], references: [id], onDelete: Cascade, map: "ChangeFile_commit_deletion_fkey")

  commitAddition Commit? @relation("AdditionFiles", fields: [commitId], references: [id], onDelete: Cascade, map: "ChangeFile_commit_addition_fkey")

  commitModifiedDiff Commit? @relation("ModifiledFileDiff" , fields: [commitId] , references: [id] , onDelete: Cascade , map: "ChangeFile_commit_modifiedFileDiff_fkey")

  type        FileType?   
}

// Define an enum for file types
enum FileType {
  MODIFIED
  DELETED
  ADDED
}
